@model Car_Rental.Models.Rental
@{
    ViewData["Title"] = "Create Rental";
    var car = ViewBag.Car as Car_Rental.Models.Car;
}

<h1>Rent @car?.Brand @car?.Model</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Car</dt>
            <dd class="col-sm-8">@car?.Brand @car?.Model (@car?.Year)</dd>

            <dt class="col-sm-4">Daily rate</dt>
            <dd class="col-sm-8">@car?.DailyRate.ToString("C")</dd>
        </dl>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CarId" />

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Confirm Rental</button>
            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car?.Id" class="btn btn-secondary ms-2">
                Back to car
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
